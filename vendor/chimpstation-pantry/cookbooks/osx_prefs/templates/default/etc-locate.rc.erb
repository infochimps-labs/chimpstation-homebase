# $FreeBSD: src/usr.bin/locate/locate/locate.rc,v 1.9 2005/08/22 08:22:48 cperciva Exp $

MAIN_USER_HOME=<%= $ws_home.inspect %>

#
# All commented values are the defaults
#
# temp directory
#TMPDIR="/tmp"

# the actual database
#FCODES="/var/db/locate.database"

# directories to be put in the database
#SEARCHPATHS="/"

# directories unwanted in output
PRUNEPATHS="/tmp /var/tmp /private/tmp /Volumes /.Spotlight-V100 /Users/Shared/Jenkins /Library/Caches <%= node[:osx_prefs][:locate][:prunepaths].join(" ") %> $MAIN_USER_HOME/Library/Caches $MAIN_USER_HOME/.rbenv $MAIN_USER_HOME/.rvm $MAIN_USER_HOME/Library/Mail"

# filesystems allowed. Beware: a non-listed filesystem will be pruned
# and if the SEARCHPATHS starts in such a filesystem locate will build
# an empty database.
#
# be careful if you add 'nfs'
#FILESYSTEMS="hfs ufs"
